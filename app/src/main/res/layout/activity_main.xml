<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.korshreddern.a16fragmentsimple.MainActivity">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <fragment
        android:id="@+id/fm_my_first"
        android:name="com.example.korshreddern.a16fragmentsimple.fragment.MyFirstFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_hello"
        android:layout_centerInParent="true"
        tools:layout="@layout/fragment_my_first" />

    <FrameLayout
        android:id="@+id/container_second_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fm_my_first" />

    <FrameLayout
        android:id="@+id/container_third_fragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/container_second_fragment" />

    <Button
        android:id="@+id/btn_goto_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/goto_view_pager" />

    <Button
        android:id="@+id/btn_goto_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/goto_transaction" />
</RelativeLayout>
